  author = {Daher, Marianne and Hodge, Cristi{\'a}n and Rosati, Antonia and Daher, Marianne and Hodge, Cristi{\'a}n and Rosati, Antonia},
  year = {2019},
  journal = {Teolog{\'i}a y vida},
